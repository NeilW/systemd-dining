[Unit]
Description=Eating Food
ConditionPathIsDirectory=/home/share/dining-room/forks
PartOf=eating.target
Before=thinking.target

[Service]
Type=oneshot
SyslogFacility=local0
RemainAfterExit=yes
ExecStart=/usr/local/bin/consumption
# Mark forks sticky after we've finished eating
ExecStop=/usr/local/bin/sticky-fork
